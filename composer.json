{
    "name": "eonx-com/easy-standard",
    "description": "Centralised source of coding standard classes",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.42",
        "phpunit/phpunit": "^7.5 || ^8.4",
        "slevomat/coding-standard": "^6.4",
        "symplify/easy-coding-standard-tester": "^8.3.31",
        "rector/rector": "^0.8.2"
    },
    "autoload": {
        "psr-4": {
            "EonX\\EasyStandard\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EonX\\EasyStandard\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.6-dev"
        }
    }
}
